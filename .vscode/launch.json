{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/ServerApp/WebApp/bin/Debug/net5.0/WebApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ServerApp/WebApp",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "^\\s*Now listening on:\\s+(https?://\\S+)"
            },
            "env": {
                //この設定値で読み込むconfigが変わる。
                "ASPNETCORE_ENVIRONMENT": "Development", 
                //Httpでサイトを開いたことがある状態で、HttpsのURLにアクセスする場合は、一度localhostのCookieを削除する事。（逆も同じ）
                //(Cookieのsecureの設定が異なるので、cookieが送信されずログイン等が出来なくなる為)
                "ASPNETCORE_URLS": "https://localhost:5441"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/ServerApp/WebApp/Views"
            },
            "requireExactSource": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}